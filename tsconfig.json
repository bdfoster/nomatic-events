        "noImplicitAny": false,
        "removeComments": false,
        "sourceMap": true,
        "target": "es5",
        "outDir": "./dist"
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./src/**/*.spec.ts",
        "./node_modules/**"
    ]
}
