{
  "name": "nomatic-events",
  "version": "1.0.0",
  "author": "Brian D. Foster <bdfoster89@gmail.com> (https://github.com/bdfoster)",
  "description": "Fast, asynchronous, and regex-enabled event framework for Node.js",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/bdfoster/nomatic-events"
  },
  "bugs": {
    "url": "https://github.com/bdfoster/nomatic-events/issues"
  },
  "runkitExampleFilename": "examples/runkit.js",
  "scripts": {
    "compile": "tsc --diagnostics --listEmittedFiles",
    "test": "mocha --recursive test/**/*.test.js",
    "test-gitlab": "NODE_ENV=test npm test",
    "coverage": "nyc npm test",
    "coverage-gitlab": "cross-env NODE_ENV=test npm run coverage",
    "codeclimate": "codeclimate-test-reporter < ./coverage/lcov.info",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "engines": {
    "node": ">=6.0.0",
    "npm": ">=3.0.0"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "devDependencies": {
    "@types/lodash": "^4.14.39",
    "babelify": "^7.3.0",
    "chai": "^3.5.0",
    "codeclimate-test-reporter": "^0.4.0",
    "coveralls": "^2.11.15",
    "cross-env": "^3.1.3",
    "istanbul": "^0.4.5",
    "mocha": "^3.0.2",
    "nyc": "^10.0.0",
    "ts-node": "^1.7.0",
    "typescript": "^2.0.10"
  },
  "dependencies": {
    "lodash": "^4.15.0"
  }
}
